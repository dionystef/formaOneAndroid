<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dcs.formaonefinal.CreateEtablissementActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/editBox"
                android:id="@+id/nameEtablissement">
                <TextView
                    style="@style/label"
                    android:text="Nom de l'établissemnt"
                    android:id="@+id/textNom"/>
                <EditText
                    style="@style/editext"
                    android:id="@+id/editName"
                    android:text="CampusId"/>
            </LinearLayout>

            <LinearLayout
                style="@style/editBox"
                android:id="@+id/addressEtablissement">
                <TextView
                    style="@style/label"
                    android:text="Adresse principale"
                    android:id="@+id/textAdresse"/>
                <EditText
                    style="@style/editext"
                    android:inputType="textPostalAddress"
                    android:id="@+id/editAddress"
                    android:text="20 rue charles baudelaire"/>
            </LinearLayout>

            <LinearLayout
                style="@style/editBox"
                android:id="@+id/complementAddressEtablissement">
                <TextView
                    style="@style/label"
                    android:text="Complément d&apos;adresse"
                    android:id="@+id/textCompleteEtablissement"/>
                <EditText
                    style="@style/editext"
                    android:inputType="textPostalAddress"
                    android:id="@+id/editCompleteAddressEtablissement"
                    android:text="les balcons du ray"/>
            </LinearLayout>

            <LinearLayout
                style="@style/editBox"
                android:id="@+id/zipCode">
                <TextView
                    style="@style/label"
                    android:text="Code postal"
                    android:id="@+id/textZipCodeEtablissement" />
                <EditText
                    style="@style/editext"
                    android:inputType="number"
                    android:id="@+id/editZipCode"
                    android:text="06100"/>
            </LinearLayout>

            <LinearLayout
                style="@style/editBox"
                android:id="@+id/city">
                <TextView
                    style="@style/label"
                    android:text="Ville"
                    android:id="@+id/textCity"/>
                <EditText
                    style="@style/editext"
                    android:id="@+id/editCityEtablissement"
                    android:text="Nice"/>
            </LinearLayout>

            <LinearLayout
                style="@style/editBox"
                android:id="@+id/verifMdp">
                <TextView
                    style="@style/label"
                    android:text="commencement de l'activité"
                    android:id="@+id/labelDateActivity"/>
                <EditText
                    style="@style/editext"
                    android:inputType="date"
                    android:id="@+id/editDateActivity"
                    android:text="2012-01-01"/>
            </LinearLayout>

            <LinearLayout
                style="@style/editBoxButton"
                android:id="@+id/buttonStepOne">
                <Button
                    style="@style/buttonBack"
                    android:id="@+id/buttonCancelEtablissement"
                    android:text="Annuler"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <Button
                    style="@style/buttonNext"
                    android:id="@+id/buttonValideEtablissement"
                    android:text="Terminer"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
